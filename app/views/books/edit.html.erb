     
<div class="container">
  <div class="row">
    <div class="col-sm12 col-md-8 col-lg-5 px-5 mx-auto">
      <h1>Editing book</h1>
      <%= form_with model: @book do |f| %>
       <p>Title</p>
       <%=f.text_field :title %>
       <p>Opinion</p>
       <%=f.text_area :body %><br>
       <%=f.submit 'UpdateBook',class:'btn btn-success' %>
      <% end %>
      <%=link_to "Show",book_path(params[:id]) %> |
      <%=link_to "Back",books_path %> 
      
    </div>
  </div>
</div>
     