<div class="container px-5">
  <div class="row">
    <div class="col">
      <h2>User info</h2>
      <%= image_tag current_user.get_profile_image(100,100) %>
      <table class="table">
       <tbody>
        <tr>
          <th>name</th>
          <th><%=current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%=current_user.introduction %></th>
        </tr>
       </tbody>
      </table>
      <div class="row">
        <%=link_to  edit_user_path(current_user.id),class: "col btn btn-outline-secondary btn-block"  do %>
        <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
       <p>Title</p>
       <%=f.text_field :title %>
       <p>Opinion</p>
       <%=f.text_area :body %><br>
       <%=f.submit 'CreateBook',class:'btn btn-success' %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
            <tbody>
             <% @books.each do |book| %>
                <tr>
                 <td>
                  <!--<%=link_to users_path do %>リンク先をユーザーの詳細ページにしたい-->
                   <%=image_tag book.user.get_profile_image(100,100) %>
                  <!--<% end %>-->
                 </td>
                 <td><%=link_to book.title,book_path(book.id) %></td>
                 <td><%=book.body %></td>
                </tr>
             <% end %>
            </tbody>
        </table>
    </div>
  </div>
</div>