<div class="container px-5">
  <div class="row">
    <div class="col">
      <h2>User info</h2>
      <%= image_tag profile_image %>
      <table class="table">
       <tbody>
        <tr>
          <th>name</th>
          <th><%=%></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%=%></th>
        </tr>
       </tbody>
      </table>
      <div class="row">
        <a class="col-7 btn btn-outline-secondary btn-block" href="/users">
         <i class="fa-solid fa-user-gear"></i>
        </a>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
       <p>Title</p>
       <%= f.text_field :title %>
       <p>Opinion</p>
       <%=f.text_area :body %><br>
       <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book"<%=f.submit %>
       </input>
      <% end %>
    </div>
    <div class="col"></div>
  </div>
</div>