    <div class="col">
      <h2>User info</h2>
      <!--インスタンス変数-->
      <%= image_tag user.get_profile_image(100,100) %>
      <table class="table">
       <tbody>
        <tr>
          <th>name</th>
          <th><%=user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%=user.introduction %></th>
        </tr>
       </tbody>
      </table>
      <div class="row">
        <%=link_to  edit_user_path(current_user.id),class: "col btn btn-outline-secondary btn-block"  do %>
        <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>
      <!--New Bookが編集機能になっているが、新規投稿にしたい-->
      <h2 class="mt-3">New book</h2>
      <%= form_with model: book do |f| %>
       <p>Title</p>
       <%=f.text_field :title %>
       <p>Opinion</p>
       <%=f.text_area :body %><br>
       <%=f.submit 'CreateBook',class:'btn btn-success' %>
      <% end %>
    </div>