<div class="container">
  <div class="row">
    <div class="col px-5  mx-auto">
      <h2 class="mt-3">User info</h2>
    <% if @user.errors.any? %>
      <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
       <% end %>
      </ul>
    <% end %>
      <div class="col">
       <%= form_with model: @user do |f| %>
        <p>Name</p>
        <%= f.text_field :name %>
        <p>Image</p>
        <%=f.file_field :profile_image %>
        <p>Introduction</p>
        <%=f.text_area :introduction %><br>
        <%=f.submit 'Update User',class: "btn btn-secondary"%>
       <% end %>
      </div>
    </div>
  </div>
</div>