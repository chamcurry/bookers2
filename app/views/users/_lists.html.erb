    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag current_user.get_profile_image(100,100) %>
      <table class="table">
       <tbody>
        <tr>
          <th>name</th>
          <th><%=current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%=current_user.introduction %></th>
        </tr>
       </tbody>
      </table>
      <div class="row">
        <%=link_to  edit_user_path(current_user.id),class: "col btn btn-outline-secondary btn-block"  do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: book do |f| %>
       <label for="book_title">Title</label>
       <%= f.text_field :title %>
       <p>Opinion</p>
       <%=f.text_area :body %><br>
       <%=f.submit 'Create Book',class:'btn btn-success' %>
      <% end %>
    </div>
